{{!-- when users enter into a single post, if logged in, they can see comments and make comments --}}
{{>post-body post}}

{{#if loggedIn}}
<div class="comment-container container">
    <form id="comment-form" class="card">
        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}"/>
        <div class="form-group">
            <label class="form-label" for="comment-body">Add a New Comment:</label>

            <textarea name="comment-body" class="form-control"></textarea>
        </div>
            <button type="submit" class="comment-btn btn btn-dark">Submit</button>
        </div>
    </form>
</div>
<div class="container previous-comments">
{{/if}}

{{>comments post.comments}}
</div>

<script src="/js/comment.js"></script>
